{
  "name": "maatrucare-full-stack",
  "version": "1.0.0",
  "description": "MaatruCare - Full Stack Application",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run chatbot\" \"npm run moodanalyzer\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "chatbot": "cd MaatruCare_ML/Chatbot && .venv\\Scripts\\activate.bat && python chatbot_api.py",
    "moodanalyzer": "cd MaatruCare_ML/MoodAnalyser && .venv\\Scripts\\activate.bat && python api.py"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
